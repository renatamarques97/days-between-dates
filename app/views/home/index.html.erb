<h1>Days between Dates</h1>

<div>
  <div class="form-wrapper">
    <%= form_for :search, method: :get do |t| %>
      <%= t.date_field :start_date, as: :string, class: "date-picker", id: "start-date" %>
      <%= t.date_field :end_date, as: :string, class: "date-picker", id: "end-date" %>
      <%= t.submit "Submit" %>
    <% end %>
  </div>

  <% unless @result.nil? %>
    <h3> = <%= @days %> days, <%= @hours %> hours.</h3>
  <% end %>
</div>

